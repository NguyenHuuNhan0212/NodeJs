<div class="mt-4">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <h3>ĐĂNG KHÓA HỌC</h3>
        </div>
        <div class="col-sm-6 text-end">
             <a href="/me/stored/courses"><button type="button" class="btn btn-outline-primary">Khóa học của tôi</button></a>
        </div>
    </div>
    
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>

        <div class="form-group">
            <label for="videoId" class="form-label">ID video</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level" class="form-label">Cấp độ</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
       
        <button type="submit" class="btn btn-primary mt-4">Thêm khóa học</button>
    </form>
</div>